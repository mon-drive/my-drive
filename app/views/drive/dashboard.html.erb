                          <li>
                              <a href="javascript:void(0);" class="dropdown-item move-item">
                                <%= link_to @root_folder_name, move_item_path(folder_id: @root_folder_id, item_id: item.id), class: 'dropdown-item' %>
                              </a>
                            </li>
                          <li>
                        <% end %>
                        <% @all_items.select { |item| item.mime_type == 'application/vnd.google-apps.folder' }.each do |folder| %>
                            <a href="javascript:void(0);" class="dropdown-item move-item" data-id="<%= item.id %>" data-folder-id="<%= folder.id %>">
                              <%= link_to folder.name, move_item_path(folder_id: folder.id, item_id: item.id), class: 'dropdown-item' %>
                            </a>
                          </li>
                        <% end %>
                      </ul>
                    </li>
                    <li><%= form_with url: delete_item_path, method: :delete, local: true, class: 'd-inline' do %>
                        <% if item.mime_type == 'application/vnd.google-apps.folder' %>
                          <%= hidden_field_tag :item_id, item.user_folder_id %>
                        <% else %>
                          <%= hidden_field_tag :item_id, item.user_file_id %>
                        <% end %>
                        <%= hidden_field_tag :folder_id, $current_folder %>
                        <button type="submit" class="dropdown-item"><%= t('dash.delete')%></button>
                        <% end %>
                    </li>
                    <% if item.mime_type == 'application/vnd.google-apps.folder' %>
                      <li><a href="javascript:void(0);" class="dropdown-item properties-item" data-id="<%= item.user_folder_id %>" data-folder-id="<%= $current_folder %>" data-is-folder="<%= item.mime_type %>"><%= t('dash.properties')%></a></li>
                    <% else %>
                      <li><a href="javascript:void(0);" class="dropdown-item properties-item" data-id="<%= item.user_file_id %>" data-file-id="<%= $current_folder %>" data-is-folder="<%= item.mime_type %>"><%= t('dash.properties')%></a></li>
                    <% end %>
                  </ul>
                  <%= @total_space %>
                  <%= @used_space %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
