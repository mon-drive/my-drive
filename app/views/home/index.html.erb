  <%end%>
  <a class="nav-link" href="<%= pricing_path %>">Plans</a>
  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
    Language
  </a>
  <% if session[:user_id] %>
    <a class="nav-link" href="<%= signout_path %>">Logout</a>
  <% else %>
