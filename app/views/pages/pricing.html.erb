<!-- app/views/pages/pricing.html.erb -->
<div class="container text-center mt-5">
  <h1>Choose your plan</h1>

  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h2>Free</h2>
        </div>
        <div class="card-body">
          <p class="card-text">0€/month</p>
          <ul class="list-unstyled">
            <li>Characteristics 1</li>
            <li>Characteristics 2</li>
            <li>Characteristics 3</li>
          </ul>
          <%= form_with url: payment_complete_path, method: :post do %>
            <%= hidden_field_tag :plan, 'free' %>
            <%= submit_tag 'Select', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h2>Premium</h2>
        </div>
        <div class="card-body">
          <p class="card-text">10€/month</p>
          <ul class="list-unstyled">
            <li>Premium Characteristics 1</li>
            <li>Premium Characteristics 2</li>
            <li>Premium Characteristics 3</li>
          </ul>
          <%= link_to 'Select', payment_path(plan: 'premium'), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
